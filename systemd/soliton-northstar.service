[Unit]
Description=Soliton Registry — North Star Seed Node (Nᵒᵣᵗʰ‑001)
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/soliton-north-star-node
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
Environment=PORT=3001
User=soliton
Group=soliton

# Sovereign hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/soliton-north-star-node

[Install]
WantedBy=multi-user.target
